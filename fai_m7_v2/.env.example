# M7.2: PII Detection & Financial Data Redaction
# Copy to .env and configure

# Presidio Configuration (Self-Hosted)
# Set to true if Presidio models are installed
PRESIDIO_ENABLED=false

# spaCy Model Configuration
# Download with: python -m spacy download en_core_web_lg
SPACY_MODEL=en_core_web_lg

# Application Settings
LOG_LEVEL=INFO
CONFIDENCE_THRESHOLD=0.5

# Audit Trail Settings
AUDIT_RETENTION_DAYS=2555  # 7 years for SOX compliance
ENABLE_HASH_CHAIN=true
