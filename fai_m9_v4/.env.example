# L3 M9.4: Human-in-the-Loop for High-Stakes Decisions
# Copy to .env and fill in your values

# ═══════════════════════════════════════════════════════════════════════════
# Optional AI Service Configuration (for RAG response generation)
# ═══════════════════════════════════════════════════════════════════════════
OPENAI_ENABLED=false
OPENAI_API_KEY=your_openai_api_key_here

# ═══════════════════════════════════════════════════════════════════════════
# Database Configuration (for persistent audit trail)
# ═══════════════════════════════════════════════════════════════════════════
# Leave as default for in-memory storage (development only)
DATABASE_URL=postgresql://localhost/financial_ai

# ═══════════════════════════════════════════════════════════════════════════
# Redis Configuration (for queue management)
# ═══════════════════════════════════════════════════════════════════════════
# Leave as default to disable queue management
REDIS_URL=redis://localhost:6379/0

# ═══════════════════════════════════════════════════════════════════════════
# Notification Configuration
# ═══════════════════════════════════════════════════════════════════════════
SENDGRID_ENABLED=false
SENDGRID_API_KEY=your_sendgrid_api_key_here

SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ═══════════════════════════════════════════════════════════════════════════
# SLA Configuration
# ═══════════════════════════════════════════════════════════════════════════
DEFAULT_SLA_HOURS=24
SLA_WARNING_THRESHOLD=0.8

# ═══════════════════════════════════════════════════════════════════════════
# Workflow Configuration
# ═══════════════════════════════════════════════════════════════════════════
ENABLE_AUTO_ESCALATION=true
ESCALATION_THRESHOLD_HOURS=2

# ═══════════════════════════════════════════════════════════════════════════
# Security Configuration
# ═══════════════════════════════════════════════════════════════════════════
# 7 years (2555 days) for SOX compliance
AUDIT_RETENTION_DAYS=2555
HASH_ALGORITHM=sha256

# ═══════════════════════════════════════════════════════════════════════════
# Module Configuration
# ═══════════════════════════════════════════════════════════════════════════
TIMEOUT=30
MAX_RETRIES=3
LOG_LEVEL=INFO
