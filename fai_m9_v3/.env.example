# ============================================================================
# L3 M9.3: Regulatory Constraints - Environment Configuration
# ============================================================================

# ============================================================================
# SERVICE CONFIGURATION (Auto-detected: ANTHROPIC)
# ============================================================================
# This module integrates with M9.1 Citation Tracker which uses Anthropic.
# Set to "true" to enable M9.1 integration features.
# ============================================================================
ANTHROPIC_ENABLED=false
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL - REQUIRED)
# ============================================================================
# PostgreSQL stores compliance data:
# - public_disclosures: Publicly disclosed information registry
# - mnpi_indicators: Material event keyword patterns
# - disclaimer_templates: Centralized disclaimer management
# - compliance_violations: Audit trail for SEC investigations
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=financial_compliance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# COMPLIANCE SETTINGS
# ============================================================================
# MNPI_DETECTION_THRESHOLD: Confidence threshold for flagging violations (0.0-1.0)
#   Higher = fewer false positives, more false negatives
#   Lower = more false positives, fewer false negatives
#   Recommended: 0.85 (balance between precision and recall)
MNPI_DETECTION_THRESHOLD=0.85

# ENABLE_AUTO_DISCLAIMERS: Automatically inject FINRA and Safe Harbor disclaimers
ENABLE_AUTO_DISCLAIMERS=true

# ESCALATE_INVESTMENT_ADVICE: Flag investment advice patterns for human review
ESCALATE_INVESTMENT_ADVICE=true

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# SETUP INSTRUCTIONS
# ============================================================================
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Set POSTGRES_PASSWORD (REQUIRED):
#    Replace "your_postgres_password_here" with actual password
#
# 3. Install spaCy model (REQUIRED):
#    python -m spacy download en_core_web_sm
#
# 4. (Optional) Set ANTHROPIC_API_KEY for M9.1 integration:
#    Replace "your_anthropic_api_key_here" with actual API key
#    Set ANTHROPIC_ENABLED=true
#
# 5. (Optional) Configure PostgreSQL database:
#    Create database: createdb financial_compliance
#    Run migrations: python scripts/init_db.py (if available)
#
# 6. Verify configuration:
#    python config.py
# ============================================================================
