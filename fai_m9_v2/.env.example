# SERVICE DETECTION: OFFLINE (local processing)
# Core functionality works without any external API keys

# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Offline mode (skip all external API calls in notebooks)
OFFLINE=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# OPTIONAL: SEMANTIC ANALYSIS ENHANCEMENT
# ============================================================================

# Enable semantic analysis for improved classification accuracy (optional)
# Core pattern-based classification works without this
SEMANTIC_ANALYSIS_ENABLED=false

# LLM provider for semantic analysis (if enabled)
# Options: "openai" or "anthropic"
LLM_PROVIDER=openai

# API keys (only needed if SEMANTIC_ANALYSIS_ENABLED=true)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

