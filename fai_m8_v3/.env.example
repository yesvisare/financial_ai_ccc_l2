# L3 M8.3: Financial Entity Recognition & Linking Configuration
# Copy this file to .env and configure as needed

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# FinBERT Model Path (Hugging Face model ID or local path)
FINBERT_MODEL_PATH=ProsusAI/finbert

# Confidence thresholds (0.0 - 1.0)
FINBERT_CONFIDENCE_THRESHOLD=0.75
ENTITY_LINK_CONFIDENCE_THRESHOLD=0.85

# =============================================================================
# SEC EDGAR API CONFIGURATION
# =============================================================================

# User-Agent for SEC EDGAR API (required by SEC.gov)
# Format: "CompanyName contact@example.com"
SEC_EDGAR_USER_AGENT=FinancialRAG contact@example.com

# =============================================================================
# CACHING CONFIGURATION (Optional)
# =============================================================================

# Enable Redis caching (improves performance)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL_SECONDS=86400

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# Enable PostgreSQL for entity mapping storage
POSTGRES_ENABLED=false
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=financial_entities
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# =============================================================================
# METADATA ENRICHMENT CONFIGURATION
# =============================================================================

# Enable metadata enrichment with market data
ENABLE_METADATA_ENRICHMENT=true

# Enable yfinance for real-time market data
YFINANCE_ENABLED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
