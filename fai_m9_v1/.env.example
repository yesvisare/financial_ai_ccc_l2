# Service Configuration
# This module uses multiple services for different components:
# - ANTHROPIC: Claude API for LLM generation
# - OPENAI: Text embeddings (text-embedding-3-small)
# - PINECONE: Vector database for document retrieval

# ANTHROPIC Configuration (Primary LLM Service)
ANTHROPIC_ENABLED=false
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OPENAI Configuration (Embeddings)
OPENAI_ENABLED=false
OPENAI_API_KEY=your_openai_api_key_here

# PINECONE Configuration (Vector Database)
PINECONE_ENABLED=false
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=sec-filings

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development

# Note: For full functionality, enable all three services
# For offline/testing mode, set all ENABLED flags to false
