# Environment Configuration for Secure Financial RAG Deployment
# Service: OPENAI (auto-detected from script Section 4)
# Copy this file to .env and fill in your actual values

# ===== OpenAI Configuration (Primary RAG Service) =====
OPENAI_ENABLED=false
OPENAI_API_KEY=your_openai_api_key_here

# ===== Pinecone Configuration (Vector Database) =====
PINECONE_ENABLED=false
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws

# ===== AWS Configuration =====
AWS_REGION=us-east-1
AWS_VPC_ID=vpc-xxxxx
AWS_KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/xxxxx

# ===== Security Configuration =====
ENABLE_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true
LOG_RETENTION_YEARS=7

# ===== Database Configuration (PostgreSQL for user/role management) =====
DATABASE_URL=postgresql://user:password@localhost:5432/financial_rag

# ===== Redis Configuration (Caching) =====
REDIS_URL=redis://localhost:6379

# ===== Secrets Manager Configuration =====
# Secret names follow convention: financial-rag/{environment}/{service}/{key_name}
OPENAI_SECRET_NAME=financial-rag/production/openai/api-key
PINECONE_SECRET_NAME=financial-rag/production/pinecone/api-key

# ===== Deployment Environment =====
ENVIRONMENT=production
