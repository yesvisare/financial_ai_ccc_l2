# ============================================================================
# L3 M10.4: Disaster Recovery & Business Continuity - Environment Configuration
# ============================================================================

# AWS Configuration
AWS_ENABLED=false
AWS_REGION_PRIMARY=us-east-1
AWS_REGION_DR=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# Pinecone Configuration
PINECONE_ENABLED=false
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_PRIMARY=financial-rag-primary
PINECONE_INDEX_DR=financial-rag-dr

# PostgreSQL Primary Database (US-EAST-1)
POSTGRESQL_ENABLED=false
POSTGRES_PRIMARY_HOST=your-primary-rds-endpoint.us-east-1.rds.amazonaws.com
POSTGRES_PRIMARY_PORT=5432
POSTGRES_PRIMARY_DB=financial_rag
POSTGRES_PRIMARY_USER=your_db_user
POSTGRES_PRIMARY_PASSWORD=your_db_password

# PostgreSQL DR Database (US-WEST-2)
POSTGRES_DR_HOST=your-dr-rds-endpoint.us-west-2.rds.amazonaws.com
POSTGRES_DR_PORT=5432
POSTGRES_DR_DB=financial_rag
POSTGRES_DR_USER=your_db_user
POSTGRES_DR_PASSWORD=your_db_password

# Route 53 DNS Configuration
ROUTE53_HOSTED_ZONE_ID=your_hosted_zone_id_here
ROUTE53_DOMAIN=rag.yourcompany.com

# PagerDuty Integration (Optional)
PAGERDUTY_ENABLED=false
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key_here

# ============================================================================
# Instructions:
# 1. Copy this file to .env
# 2. Replace placeholder values with your actual credentials
# 3. Set *_ENABLED=true for services you want to use
# 4. Never commit .env to version control (.gitignore blocks this)
# ============================================================================
