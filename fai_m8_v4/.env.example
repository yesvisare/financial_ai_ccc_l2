# ============================================================================
# L3 M8.4: Temporal Financial Information Handling - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# Pinecone Configuration (Primary Service - Vector Database)
# ----------------------------------------------------------------------------
# Set to "true" to enable Pinecone vector database for temporal queries
PINECONE_ENABLED=false

# Pinecone API credentials (required when PINECONE_ENABLED=true)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Pinecone index name for financial documents
PINECONE_INDEX_NAME=financial-documents

# ----------------------------------------------------------------------------
# Anthropic Configuration (Secondary Service - LLM, Optional)
# ----------------------------------------------------------------------------
# Set to "true" to enable Anthropic Claude for LLM-based response generation
ANTHROPIC_ENABLED=false

# Anthropic API key (required when ANTHROPIC_ENABLED=true)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ----------------------------------------------------------------------------
# Redis Configuration (Optional - Caching)
# ----------------------------------------------------------------------------
# Set to "true" to enable Redis caching for fiscal year ends
REDIS_ENABLED=false

# Redis connection URL
REDIS_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
