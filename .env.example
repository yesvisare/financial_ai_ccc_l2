# L3 M7.1: Financial Document Types & Regulatory Context
# Copy to .env and fill in values

# EDGAR Service Configuration
# Set to "true" to enable EDGAR API integration
EDGAR_ENABLED=false

# EDGAR User Agent (required if EDGAR_ENABLED=true)
# Format: "CompanyName email@example.com"
# Example: "MyCompany john.doe@example.com"
EDGAR_USER_AGENT=CompanyName email@example.com

# Application Settings
LOG_LEVEL=INFO
OFFLINE=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Compliance Settings
PII_RECALL_THRESHOLD=0.999
AUDIT_LOG_RETENTION_DAYS=2555
